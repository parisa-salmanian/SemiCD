{
    "name": "ReCO",
    "sup_percent":5,
    "unsup_percent":5,
    "n_total_lbl": 7120,
    "n_gpu": 1,
    "diff_lrs": true,
    "ramp_up": 0.1,
    "unsupervised_w": 0.3,
    "lr_scheduler": "Poly",
    "pretrained": true,
    "N_temp_rots": 8,

    "model":{
        "supervised": false,
        "semi": true,

        "supervised_w": 1,
        "sup_loss": "CE"
        },

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 1e-2,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "train_supervised": {
        "data_dir": "/media/lidan/ssd2/CDData/LEVIR-CD256",
        "batch_size": 16,
        "crop_size": 256,
        "shuffle": true,
        "base_size": 256,
        "scale": false,
        "augment": true,
        "flip": true,
        "rotate": true,
        "blur": true,
        "jitter": true,
        "split": "train_supervised",
        "num_workers": 4
    },

    "train_unsupervised": {
        "data_dir": "/media/lidan/ssd2/CDData/LEVIR-CD256",
        "batch_size": 16,
        "crop_size": 256,
        "shuffle": true,
        "base_size": 256,
        "scale": false,
        "augment": true,
        "flip": true,
        "rotate": true,
        "blur": true,
        "jitter": true,
        "split": "train_unsupervised",
        "num_workers": 4
    },

    "val_loader": {
        "data_dir": "/media/lidan/ssd2/CDData/LEVIR-CD256",
        "batch_size": 1,
        "val": true,
        "split": "val",
        "shuffle": false,
        "num_workers": 1
    },

    "trainer": {
        "epochs": 80,
        "save_dir": "/media/lidan/ssd2/SemiCD/saved/LEVIR-CD/RoCD",
        "save_period": 5,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "/media/lidan/ssd2/SemiCD/saved/LEVIR-CD/RoCD",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
